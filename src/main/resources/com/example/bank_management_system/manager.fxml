<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="720" prefWidth="1280" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.bank_management_system.ManagerController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Manager's Dashboard" />
        <TextField fx:id="accountNumberTextField" layoutX="14.0" layoutY="44.0" promptText="Enter Account Number" />
        <Button fx:id="checkAccountStatusButton" layoutX="14.0" layoutY="74.0" onAction="#handleCheckAccountStatusButtonAction" text="Check Account Status" />

        <Label layoutX="14.0" layoutY="104.0" text="Account Number:" />
        <Label fx:id="accountNumberLabel" layoutX="150.0" layoutY="104.0" />

        <Label layoutX="14.0" layoutY="134.0" text="Account Holder:" />
        <Label fx:id="accountHolderLabel" layoutX="150.0" layoutY="134.0" />

        <Label layoutX="14.0" layoutY="164.0" text="Balance:" />
        <Label fx:id="balanceLabel" layoutX="150.0" layoutY="164.0" />

        <Label layoutX="14.0" layoutY="194.0" text="Status:" />
        <Label fx:id="statusLabel" layoutX="150.0" layoutY="194.0" />

        <Button layoutX="14.0" layoutY="330.0" mnemonicParsing="false" onAction="#handleBackButton" text="Back" />
        <Button fx:id="activateOrDeactivate" layoutX="14.0" layoutY="223.0" mnemonicParsing="false" onAction="#activateOrDeactivate" text="     " visible="false"/>
    </children>
</AnchorPane>
