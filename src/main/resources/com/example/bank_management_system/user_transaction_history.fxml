<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720" prefWidth="1280" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bank_management_system.UserTransactionHistoryController">
    <children>
        <TableView fx:id="transactionTable" layoutX="14.0" layoutY="14.0" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" />
                <TableColumn fx:id="amountColumn" text="Amount" />
                <TableColumn fx:id="balanceColumn" text="Balance" />
            </columns>
        </TableView>
        <Button layoutX="14.0" layoutY="430.0" text="Back" onAction="#onBackClick"/>
        <Button layoutX="100.0" layoutY="430.0" text="Export CSV" onAction="#handleExportCSV"/>
    </children>
</AnchorPane>
